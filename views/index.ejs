<section class="hero-section">
    <div class="hero-content">
        <h1>Welcome to CSE Motors</h1>
        <p>Your trusted source for quality vehicles</p>
        <img src="/images/site/own_today.png" alt="Own Today" class="hero-image">
    </div>
</section>

<section class="featured-vehicles">
    <h2>Featured Vehicles</h2>
    <div class="vehicle-grid">
        <% if (featuredVehicles && featuredVehicles.length > 0) { %>
            <% featuredVehicles.forEach(vehicle => { %>
                <div class="vehicle-card">
                    <a href="/inv/detail/<%= vehicle.inv_id %>" title="View <%= vehicle.inv_make %> <%= vehicle.inv_model %> details">
                        <img src="<%= vehicle.inv_image %>" alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>">
                    </a>
                    <h3>
                        <a href="/inv/detail/<%= vehicle.inv_id %>" title="View <%= vehicle.inv_make %> <%= vehicle.inv_model %> details">
                            <%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>
                        </a>
                    </h3>
                    <p class="vehicle-price">$<%= new Intl.NumberFormat('en-US').format(vehicle.inv_price) %></p>
                    <p class="vehicle-miles"><%= new Intl.NumberFormat('en-US').format(vehicle.inv_miles) %> miles</p>
                </div>
            <% }) %>
        <% } else { %>
            <div class="vehicle-card">
                <img src="/images/vehicles/delorean.jpg" alt="DeLorean DMC-12">
                <h3>DeLorean DMC-12</h3>
                <p>Time travel in style</p>
            </div>
            <div class="vehicle-card">
                <img src="/images/vehicles/adventador.jpg" alt="Lamborghini Adventador">
                <h3>Lamborghini Adventador</h3>
                <p>Supercar performance</p>
            </div>
            <div class="vehicle-card">
                <img src="/images/vehicles/wrangler.jpg" alt="Jeep Wrangler">
                <h3>Jeep Wrangler</h3>
                <p>Off-road adventure</p>
            </div>
        <% } %>
    </div>
</section>

<section class="about-section">
    <div class="about-content">
        <h2>About CSE Motors</h2>
        <p>At CSE Motors, we're passionate about connecting you with your dream vehicle. With years of experience in the automotive industry, we provide exceptional service and a wide selection of quality vehicles.</p>
        <div class="features">
            <div class="feature">
                <img src="/images/site/small_check.png" alt="Quality Check">
                <h4>Quality Assured</h4>
                <p>Every vehicle is thoroughly inspected</p>
            </div>
            <div class="feature">
                <img src="/images/site/small_check.png" alt="Best Prices">
                <h4>Best Prices</h4>
                <p>Competitive pricing on all vehicles</p>
            </div>
            <div class="feature">
                <img src="/images/site/small_check.png" alt="Expert Service">
                <h4>Expert Service</h4>
                <p>Knowledgeable staff ready to help</p>
            </div>
        </div>
    </div>
</section>

<section class="cta-section">
    <h2>Ready to Drive Home Today?</h2>
    <p>Contact us today to schedule a test drive or get a quote on your next vehicle.</p>
    <a href="/inv/" class="btn primary">Browse Inventory</a>
    <a href="/account" class="btn secondary">Contact Us</a>
</section>

<style>
.vehicle-card a {
    text-decoration: none;
    color: inherit;
    display: block;
}

.vehicle-card a:hover {
    text-decoration: none;
}

.vehicle-card img {
    transition: transform 0.3s ease;
}

.vehicle-card:hover img {
    transform: scale(1.05);
}

.vehicle-card h3 a {
    color: #2c3e50;
    font-weight: 600;
}

.vehicle-card h3 a:hover {
    color: #3498db;
}

.vehicle-price {
    font-size: 1.2rem;
    font-weight: bold;
    color: #27ae60;
    margin: 0.5rem 0;
}

.vehicle-miles {
    color: #666;
    font-size: 0.9rem;
    margin: 0;
}
</style>
