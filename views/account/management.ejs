<% if (title) { %>
  <h1><%= title %></h1>
<% } else { %>
  <h1>Account Management</h1>
<% } %>

<% if (locals.loggedin) { %>
  <% if(locals.accountData.account_type == 'Client') { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  <% } %>
  
  <% if(locals.accountData.account_type == 'Employee' || locals.accountData.account_type == 'Admin') { %>
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    <h3>Inventory Management</h3>
    <p><a href="/inv/" title="Link to inventory management view">Manage Inventory</a></p>
  <% } %>
  
  <p><a href="/account/update/" title="Link to account update view">Update Account Information</a></p>
<% } else { %>
  <p>You must be logged in to access this page.</p>
<% } %>